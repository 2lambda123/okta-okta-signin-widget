{
  "compilerOptions": {
    "outDir": "./public/dist",
    "noImplicitAny": true,
    "noEmit": false,
    "module": "ESNext",
    "target": "ES3",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "skipLibCheck": true,
    "lib": [
      "ES2015",
      "dom"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]
}